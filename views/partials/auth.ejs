<div class="space">
    <% if(formButtonName == "Register") { %>
    <div class="form-group">
        <label for="emailInput">Email</label>
        <input type="text" name="email" value="<%-emailValue%>" class="form-control" id="emailInput" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <% } %>
    <p class="validationMessage"> <%-emailMessage%> </p>   

    <div class="form-group">
        <label for="usernameInput">Username</label>
        <input type="text" name="username" value="<%-usernameValue%>" class="form-control" id="usernameInput" aria-describedby="usernameHelp" placeholder="Enter username">
    </div>
    <p class="validationMessage"> <%-usernameMessage%> </p>

    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" name="password" value="<%-passwordValue%>" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <p class="validationMessage"> <%-passwordMessage%> </p>

    <% if(formButtonName == "Register") { %>
    <div class="form-group">
        <label for="phoneInput">Phone</label>
        <input type="text" name="phone" value="<%-phoneValue%>" class="form-control" id="phoneInput" aria-describedby="phoneHelp" placeholder="Enter phone number">
    </div>
    <p class="validationMessage"> <%-phoneMessage%> </p>

    <div class="form-group">
        <label for="addressInput">Address</label>
        <input type="text" name="address" value="<%-addressValue%>" class="form-control" id="addressInput" aria-describedby="addressHelp" placeholder="Enter address">
    </div>
    <p class="validationMessage"> <%-addressMessage%> </p>

    <div class="form-group">
        <label for="sexInput">Sex</label>
        <input type="text" name="sex" value="<%-sexValue%>" class="form-control" id="sexInput" aria-describedby="sexHelp" placeholder="Enter sex (F/M)">
    </div>
    <% } %>
    <p class="validationMessage"> <%-sexMessage%> </p>
    <button type="submit" class="btn btn-primary"> <%= formButtonName %> </button>
</div>